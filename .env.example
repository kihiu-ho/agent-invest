# Financial Research Agents System - Environment Configuration
# =============================================================

# LangSmith Cloud Configuration for Comprehensive Tracing
# --------------------------------------------------------
# Enable LangSmith tracing for all 9 agent nodes in the LangGraph workflow
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=agentinvest
LANGCHAIN_API_KEY=lsv2_pt_your_langchain_api_key_here
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com


# OpenAI/LLM Configuration (OpenRouter API)
# ------------------------------------------
# Primary LLM configuration for AgentInvest system
OPENAI_API_KEY=sk-or-v1-your_openrouter_api_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=gpt-4o-mini

# Legacy compatibility (some modules may still use these)
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=gpt-4o-mini

# Crawl4AI Configuration for Hong Kong Stock Web Scraping
CRAWL4AI_OPENAI_BASE_URL=https://openrouter.ai/api/v1
CRAWL4AI_OPENAI_MODEL=gpt-4o-mini

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require&channel_binding=require




# Financial Research Agents System Configuration
# -----------------------------------------------
SYSTEM_NAME=AgentInvest Financial Research Agents
SYSTEM_VERSION=1.0.0
DEFAULT_RESEARCH_OBJECTIVE=Comprehensive financial analysis and investment recommendation
DEFAULT_OUTPUT_FORMAT=html

# Performance and Quality Configuration
# ------------------------------------
ENABLE_PERFORMANCE_TRACKING=true
MAX_WORKFLOW_TIMEOUT_SECONDS=300
MIN_QUALITY_SCORE=0.80
MIN_CITATION_COUNT=10
MIN_CONFIDENCE_SCORE=0.75

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
IS_EMBEDDING=true
KNN_MIN_SCORE=0.94
DUPLICATE_TEXT_DISTANCE=5
DUPLICATE_SCORE_VALUE=0.97
EFFECTIVE_SEARCH_RATIO=1
MAX_TOKEN_CHUNK_SIZE=10000
NUMBER_OF_CHUNKS_TO_COMBINE=6
UPDATE_GRAPH_CHUNKS_PROCESSED=20
ENTITY_EMBEDDING=False
GCS_FILE_CACHE=False


# Weaviate Vector Database Configuration
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_URL=https://your-cluster.weaviate.cloud
WEAVIATE_SIMILARITY_THRESHOLD=0.85
WEAVIATE_CACHE_FRESHNESS_HOURS=24
